{{> header}}

<script>
  function updateColor (color,btn_id) {
	// Real action here
	document.getElementById("photo").src="./images/{{cloth}}/"+color+".png";

	var collection = document.getElementsByName("color");
		for(var i = 0; i < collection.length; ++i) {
   			collection[i].style.background = "white";
		}
	document.getElementById(btn_id).style.background = "grey";
	document.getElementById('color').value = color;
	document.getElementById('submit').disabled = false;
  }
</script>

